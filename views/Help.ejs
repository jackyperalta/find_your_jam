    } 
    .accordion {
    background-color: darkgoldenrod;
    color: white;
    cursor: pointer;
    padding: 18px;
    width: 100%;
    text-align: center;
    border: solid;
    outline: none;
    transition: 0.4s;
    }
    .panel {
    padding: 0 18px;
    display: none;
    background-color: orange;
    overflow: hidden;
    }

    </style>
  </head>

  <body>
    <center>
      <h1 style="font-size:5vw;">
        <i>
          <p style="color: darkgoldenrod;">
          <b>Help Page</b>
        </i>
        </p>
      </h1>
    </center>
    <div style="text-align:center">

    <div class="container">
      <a .tab button style="color:darkgoldenrod;" href="/">Home</a>
      <div>
        <a .tab button style="color:darkgoldenrod;" href="books">
          <img src="Books.png" alt="Books" width="80" height="80">
